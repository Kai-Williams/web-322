<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Set: <%= set.name %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '' }) %>

  <section class="hero bg-gray-100 text-center py-6 mb-8">
    <h1 class="text-4xl font-bold text-primary">Edit Set: <%= set.name %></h1>
  </section>

  <main class="content mx-auto max-w-3xl px-6">
    <div class="card bg-white shadow-md rounded-lg p-6">
      <form action="/lego/editSet" method="POST" class="space-y-6">
        
        <div>
          <label for="name" class="label">Name</label>
          <input type="text" id="name" name="name" value="<%= set.name %>" class="input w-full" required>
        </div>

        <div>
          <label for="year" class="label">Year Released</label>
          <input type="number" id="year" name="year" value="<%= set.year %>" class="input w-full" required>
        </div>

        <div>
          <label for="num_parts" class="label">Number of Parts</label>
          <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" class="input w-full" required>
        </div>

        <div>
          <label for="img_url" class="label">Image URL</label>
          <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" class="input w-full" required>
        </div>

        <div>
          <label for="theme_id" class="label">Theme</label>
          <select id="theme_id" name="theme_id" class="input w-full" required>
            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>>
                <%= theme.name %>
              </option>
            <% }); %>
          </select>
        </div>

        <input type="hidden" name="set_num" value="<%= set.set_num %>">

        <div class="flex gap-4 justify-between mt-6">
          <button type="submit" class="btn btn-primary w-full">Update Set</button>
          <a href="/lego/deleteSet/<%= set.set_num %>" 
             class="btn btn-error w-full"
             onclick="return confirm('Are you sure you want to delete this set?');">
            Delete Set
          </a>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
