<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/public/css/main.css" />
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const response = await fetch("https://quotable.io/random");
      const data = await response.json();
      document.getElementById("quote").innerHTML = `"${data.content}"<br /><em>- ${data.author}</em>`;
    });
  </script>
  <style>
    .w-300 {
      width: 600px;
      height: 470px;
    }
    .highlighted-text {
      color: rgb(216, 159, 101);
    }
  </style>
</head>
<body tabindex="0">
  <header class="navbar bg-base-100">
    <div class="flex justify-between w-full">
      <a href="/" class="btn btn-ghost text-xl font-semibold">Lego Collection</a>
      <div class="dropdown">
        <button tabindex="0" class="btn btn-ghost sm:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 right-0 z-10">
          <li><a href="/lego/sets">View Collection</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
    </div>
  </header>

  <main class="container mx-auto p-4">
    <section class="hero bg-base-200 rounded-lg p-6 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl highlighted-text"><%= set.name %></h1>
          <p class="highlighted-text">Detailed information about the set: <%= set.name %></p>
        </div>
      </div>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="w-300">
        <img class="w-full h-full rounded-lg" src="<%= set.img_url %>" alt="Set Image" />
      </div>
      <div class="prose">
        <p class="highlighted-text">
          <strong>Set Name:</strong> <%= set.name %><br />
          <strong>Year Released:</strong> <%= set.year %><br />
          <strong>Theme:</strong> <%= set.theme %><br />
          <strong>Number of Parts:</strong> <%= set.num_parts %><br /><br />
          <span id="quote"></span><br /><br />
          <a class="btn btn-primary btn-sm" href="#" onclick="history.back(); return false;">Go Back</a>
        </p>
      </div>
    </section>
  </main>
</body>
</html>
