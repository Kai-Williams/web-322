<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New LEGO Set</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: '/lego/addSet' }) %>

  <section class="hero bg-gray-100 text-center py-6 mb-8">
    <h1 class="text-4xl font-bold text-primary">Add New LEGO Set</h1>
  </section>

  <main class="content mx-auto max-w-3xl px-6">
    <div class="card bg-white shadow-md rounded-lg p-6">
      <form action="/lego/addSet" method="POST" class="space-y-6">
        
        <div>
          <label for="name" class="label">Name</label>
          <input type="text" id="name" name="name" class="input w-full" required>
        </div>

        <div>
          <label for="year" class="label">Year Released</label>
          <input type="number" id="year" name="year" class="input w-full" required>
        </div>

        <div>
          <label for="num_parts" class="label">Number of Parts</label>
          <input type="number" id="num_parts" name="num_parts" class="input w-full" required>
        </div>

        <div>
          <label for="img_url" class="label">Image URL</label>
          <input type="url" id="img_url" name="img_url" class="input w-full" required>
        </div>

        <div>
          <label for="theme_id" class="label">Theme</label>
          <select id="theme_id" name="theme_id" class="input w-full" required>
            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }); %>
          </select>
        </div>

        <div>
          <label for="set_num" class="label">Set Number</label>
          <input type="text" id="set_num" name="set_num" class="input w-full" required>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary w-full">Submit</button>
        </div>
      </form>
    </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
    });
  </script>
</body>
</html>
