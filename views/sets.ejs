<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css">

</head>
<body tabindex="0">
  <header class="navbar bg-base-100">
    <div class="flex justify-between items-center w-full">
      <a href="/" class="btn btn-ghost text-xl font-semibold">Lego Collection</a>
      <div class="dropdown">
        <button tabindex="0" class="btn btn-ghost sm:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 right-0 z-10">
          <li><a href="/lego/sets" class="active">View Collection</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
    </div>
  </header>
  
  <main class="container mx-auto p-4">
    <section class="hero bg-base-200 rounded-lg p-6 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Our Collection</h1>
          <p class="py-6">
            Choose a theme to view sets:
            <a href="/lego/sets?theme=Video Games and Accessories" class="btn btn-primary btn-xs">Video Games</a>
            <a href="/lego/sets?theme=Bulk Bricks" class="btn btn-primary btn-xs">Bulk Bricks</a>
            <a href="/lego/sets?theme=9V" class="btn btn-primary btn-xs">9V</a>
          </p>
        </div>
      </div>
    </section>

    <section class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <style>
          .highlighted-text {
            color: #000;
            background-color: transparent;
            padding: 0.5rem;
          }
        </style>
        <% sets.forEach(set => { %>
          <tr class="highlighted-text">
            <td colspan="2">
              <div class="flex items-center space-x-3">
                <div class="avatar w-32 h-32">
                  <img src="<%= set.img_url %>" alt="Lego Image" class="mask mask-squircle w-full h-full"/>
                </div>
              </div>
            </td>
            <td>
              <div class="px-6">
                <p>
                  <span class="py-6"><%= set.name %></span> |
                  <a href="/lego/sets?theme=<%= set.theme %>"><span class="py-6"><%= set.theme %></span></a>
                </p>
              </div>
            </td>
            <td class="px-8">
              <span><strong>Year:</strong> <%= set.year %> - <strong>Parts:</strong> <%= set.num_parts %></span>
            </td>
            <td>
              <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary btn-xs highlighted-text">Details</a>
            </td>
          </tr>
        <% }) %>
      </table>
    </section>
  </main>
</body>
</html>
